<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>ثبت‌نام‌ها</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>
<body class="bg-gray-50">
  <div class="max-w-6xl mx-auto p-6">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold">ثبت‌نام‌ها</h1>
      <a href="/admin" class="px-3 py-2 bg-gray-800 text-white rounded">بازگشت</a>
    </div>

    <div class="bg-white rounded shadow p-4 overflow-x-auto">
      <table class="min-w-full text-sm">
        <thead>
          <tr class="text-right">
            <th class="p-2">#</th>
            <th class="p-2">نام</th>
            <th class="p-2">تلفن</th>
            <th class="p-2">ایمیل</th>
            <th class="p-2">خدمات</th>
            <th class="p-2">پیام</th>
            <th class="p-2">شماره مشتری</th>
            <th class="p-2">تاریخ</th>
          </tr>
        </thead>
        <tbody>
          <% rows.forEach(r => { %>
            <tr class="border-t">
              <td class="p-2"><%= r.id %></td>
              <td class="p-2"><%= r.name %></td>
              <td class="p-2"><%= r.phone %></td>
              <td class="p-2"><%= r.email %></td>
              <td class="p-2"><%= r.services %></td>
              <td class="p-2"><%= r.message %></td>
              <td class="p-2"><%= r.customer_number %></td>
              <td class="p-2"><%= r.submission_date %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
